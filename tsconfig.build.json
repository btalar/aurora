{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "__tests__/**/*",
    "playground/**/*",
    ".storybook/**/*"
  ]
}
